extends layout

block content
		//- nav bar
		nav
			div(class = 'nav-wrapper white')
				a(href="/admin_manage" class="brand-logo left")
					img(src='/images/logos/color/ALL.png' width='130px' style='margin:6px 0 0 0')
				ul(id="nav-mobile" class="right")
					li(class="brand-logo center")
						a(href="/admin_manage" class="myLogin dropdown-button green-text" data-activates='AL')
							i(class='material-icons right green-text') verified_user
							=adminName
						ul(id='AL' class='dropdown-content' )
							li: a(href='/logout')
									i(class="material-icons") power_settings_new
									|logout
					li
						a(href="/admin_manage/products" class='light-green')
							i(class="material-icons right light-green") business_center
							|Products
					li
						a(href="/admin_manage/users" class='light-blue')
							i(class="material-icons right light-blue") supervisor_account
							|Users
		//- main content
		if(arr)
			-var data = arr
		else
			-var data = []

		main(style="margin-top: 50px;")
			div(class='row col s12')
				div(class='col s4')
					canvas#myChartA
				div(class='col s8')
					canvas#myChartB

		script(type="text/javascript" src="/javascripts/Chart.bundle.min.js")
		script(type="text/javascript" src="/javascripts/admin_trading.js")
		script.
			var quantitys = [#{data.quantitys}];
			var colors = [#{data.colors}];
			var lables = [#{data.lables}];
			var total = [#{data.total}];

			displayItemsCategories(quantitys,colors,lables);
			displayMoneyCategories(total,colors,lables);